# Portfolio Agent Platform - Environment Variables
# COPY THIS FILE TO .env

# --- Database ---
POSTGRES_SERVER=localhost
POSTGRES_USER=admin
POSTGRES_PASSWORD=admin
POSTGRES_DB=portfolio_db
POSTGRES_PORT=5432

# --- MinIO / S3 ---
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=admin
MINIO_SECRET_KEY=minioadmin
MINIO_SECURE=False

# --- Service URLs (Internal Docker Networking vs Localhost) ---
# Use localhost for running locally, service names for Docker
Value_URL=http://localhost:8001/api/v1/value
Quant_URL=http://localhost:8002/api/v1/quant
Macro_URL=http://localhost:8003/api/v1/macro
Risk_URL=http://localhost:8004/api/v1/risk
Consensus_URL=http://localhost:8005/api/v1/consensus

# --- Security & Guardrails ---
API_KEY_SECRET=change_this_to_a_secure_random_string
JWT_SECRET=change_this_to_a_secure_random_string_for_jwt
CORS_ORIGINS=http://localhost:3000,http://localhost:8000
MODE_ENV=DEV  # DEV, STAGING, PROD

# --- DECIMAL THRESHOLDS (Financial Precision) ---
# Default thresholds for decision making
THRESHOLD_BUY=0.20
THRESHOLD_SELL=-0.15
THRESHOLD_STRONG_BUY=0.40
THRESHOLD_STRONG_SELL=-0.30

# --- Mode Engine ---
# Default mode on startup
SYSTEM_MODE=NORMAL
